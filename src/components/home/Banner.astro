---
import bannerImage from '../../../public/banner(1).jpg';

---

<div class="relative">
    <div class="w-full h-80 md:h-96 relative overflow-hidden">
      <img src={bannerImage.src} alt="Banner Image" class="absolute inset-0 w-full h-full object-cover opacity-70" />
    </div>
  <div class="absolute inset-0 flex flex-col justify-center items-center bg-black bg-opacity-40 text-black">
  </div>
  
  <div class="max-w-4xl mx-auto p-8">
    <h1 class="text-4xl font-extrabold mb-4 text-center">¡Bienvenido a Nuestro Sitio!</h1>
    <p class="text-lg mb-8 text-center">Disfruta de nuestras últimas actualizaciones de Fotos.</p>
  </div>
   
</div> 


  
<div class="max-w-4xl mx-auto mt-8">
    <!-- Contenedor de Álbumes de Fotos -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <!-- Álbum 1 -->
      <div class="bg-white p-4 shadow-md rounded-lg">
        <img src="/albun/albun(1).jpg" alt="Álbum 1" class="w-full h-48 object-cover rounded-lg mb-4" />
        <h2 class="text-lg font-semibold mb-2">Álbum 1</h2>
        <p class="text-sm text-gray-600 mb-2">Descripción o detalles del álbum 1</p>
        <button id="reproducir-btn-1" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-1 px-3 rounded-full">
          Ver álbum
        </button>
      </div>
  
      <!-- Álbum 2 -->
      <div class="bg-white p-4 shadow-md rounded-lg">
        <img src="/albun/albun(2).jpg" alt="Álbum 2" class="w-full h-48 object-cover rounded-lg mb-4" />
        <h2 class="text-lg font-semibold mb-2">Álbum 2</h2>
        <p class="text-sm text-gray-600 mb-2">Descripción o detalles del álbum 2</p>
        <button id="reproducir-btn-2" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-1 px-3 rounded-full">
          Ver álbum
        </button>
      </div>
  
      <!-- Álbum 3 -->
      <div class="bg-white p-4 shadow-md rounded-lg">
        <img src="/albun/albun(3).jpg" alt="Álbum 3" class="w-full h-48 object-cover rounded-lg mb-4" />
        <h2 class="text-lg font-semibold mb-2">Álbum 3</h2>
        <p class="text-sm text-gray-600 mb-2">Descripción o detalles del álbum 3</p>
        <button id="reproducir-btn-3" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-1 px-3 rounded-full">
          Ver álbum
        </button>
      </div>
    </div>
  </div>
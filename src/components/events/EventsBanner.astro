---
interface Props {
    title: string;
    image: string;
}

const {title, image} = Astro.props;
---

<div class="bg-primary text-white relative overflow-hidden w-full h-[600px]">
    <img src={image} alt={title} class="absolute inset-0 w-full h-full object-cover"/>
    <div class="max-w-screen-2xl mx-auto h-[600px] flex items-start justify-center absolute inset-0 flex-col">
        <h1 class="text-5xl text-white font-bold uppercase">
            {title}
        </h1>
    </div>
</div>


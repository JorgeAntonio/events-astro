---
type Props = {
  event: {
    date: string;
    time: string;
    location: string;
  };
};

const { event } = Astro.props;
---

<div
  class="w-[360px] max-w-screen-sm p-4 flex flex-col justify-center items-center gap-3 bg-gray-200 dark:bg-gray-800 shadow-lg"
>
  <div class="flex flex-col justify-between items-center gap-3 leading-normal">
    <h2
      class="text-3xl font-bold tracking-tight dark:text-white text-center text-balance"
    >
      {event.location}
    </h2>
    <h5 class="text-2xl font-bold tracking-tight dark:text-white">
      {event.date}
    </h5>
    <p class="text-2xl font-bold tracking-tight dark:text-white">
      {event.time}
    </p>
    <a
      href="/register"
      class="bg-gray-100 hover:bg-gray-300 text-gray-900 font-bold py-2 px-4"
    >
      Register
    </a>
  </div>
</div>

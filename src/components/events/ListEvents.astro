---
import Card from "../shared/Card.astro";

import { db, Event } from "astro:db";

const events = await db.select().from(Event).all();
---

<div
  class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 w-full justify-between gap-6"
>
  {
    events.map((event) => (
      <Card
        title={event.title}
        image={event.image}
        location={event.location}
        time={event.time}
        date={event.date}
        href={"events/" + event.id}
      />
    ))
  }
</div>

---
import Link from "./Link.astro";

interface Props {
    title: string;
    subtitle: string;
    label: string;
    href: string;
    hasLink?: boolean;
}

const {title, subtitle, image, label, href, hasLink} = Astro.props;
---
<div class="flex justify-between items-center">
    <div class="py-6">
        <h1 class="text-2xl font-bold">{title}</h1>
        <p>{subtitle}</p>
    </div>
    {
        hasLink && <Link label={label} href={href}/>
    }
</div>
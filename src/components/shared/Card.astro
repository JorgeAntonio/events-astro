---
interface Props {
    title: string;
    image: string;
    location: string;
    time: string;
    date: string;
    href: string;
}

const {href, title, location, image, time, date} = Astro.props;
---

<div class="w-full hover:transition-all duration-300 hover:scale-y-105">
    <a href={href}>
        <img class="w-full h-80 md:h-96 bg-cover hover:opacity-90" src={image} alt={title}/>
    </a>
    <div class="py-3 flex flex-col gap-1.5">
        <a href={href}>
            <h5 class="text-2xl font-bold tracking-tight text-gray-900 dark:text-white hover:underline">{title}</h5>
        </a>
        <p class="text-xl font-bold text-gray-700 dark:text-gray-400">{date}</p>
        <p class="text-lg font-bold text-gray-700 dark:text-gray-400 hover:no-underline">{location}</p>
    </div>
</div>
